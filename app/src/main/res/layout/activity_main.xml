<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.ejerciciowebservice.MainActivity">

    <TextView
        android:id="@+id/textViewCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cantidad"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/editTextCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewCantidad"
        android:inputType="number"/>
    <TextView
        android:id="@+id/textViewDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/de"
        android:layout_below="@+id/textViewCantidad"
        android:layout_marginTop="30dp"/>
    <Spinner
        android:id="@+id/spinnerDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCantidad"
        android:layout_toRightOf="@+id/textViewDe"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/textViewA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a"
        android:layout_below="@+id/textViewCantidad"
        android:layout_toRightOf="@+id/spinnerDe"
        android:layout_marginTop="30dp"/>
    <Spinner
        android:id="@+id/spinnerA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCantidad"
        android:layout_toRightOf="@+id/textViewA"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/buttonConvertir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerDe"
        android:onClick="pulsar"
        android:text="@string/convertir"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/textVResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultado"
        android:layout_below="@+id/buttonConvertir"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonConvertir"
        android:layout_toRightOf="@+id/textVResultado"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
